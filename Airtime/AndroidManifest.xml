<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.airtime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_final_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        
        <!-- Splash activity -->
        <activity
            android:name="com.airtime.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Favorites activity -->
        <activity
            android:name="com.airtime.Favorites"
            android:label="@string/title_activity_favorites"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
            
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.airtime.Search" />
        </activity>
        
        <!-- Search results activity -->
        <activity android:name="com.airtime.Search">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
 
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        
        <!-- Detailed activity -->
        <activity
            android:name="com.airtime.DetailedFavorite"
            android:label="@string/title_activity_detailed_favorite" >
        </activity>
    </application>

</manifest>
