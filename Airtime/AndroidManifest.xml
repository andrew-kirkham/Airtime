<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="air.time.airtime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:hasCode="false"
        android:icon="@drawable/ic_launcher"
        android:label="Airtime"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name="air.time.airtime.Activities.Splash"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="air.time.airtime.Activities.Home"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="air.time.airtime.Activities.Details"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name="air.time.airtime.Activities.Favorites"
            android:label="@string/title_activity_favorites" >
        </activity>
    </application>

</manifest>
